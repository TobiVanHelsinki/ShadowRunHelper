                    <TextBlock Style="{StaticResource EditTextBlock}" x:Uid="Model_Strömung_Wandlung_Paragon" Grid.Column="0" Grid.Row="0"/>
                    <TextBox Text="{x:Bind Paragon, Mode=TwoWay}" Style="{StaticResource EditTextBox}" Grid.Column="1" Grid.Row="0"/>
                    <TextBlock Style="{StaticResource EditTextBlock}" x:Uid="Model_Strömung_Wandlung_Echos" Grid.Column="2" Grid.Row="0"/>
                    <TextBox Text="{x:Bind Echos, Mode=TwoWay}" Style="{StaticResource EditTextBox}" Grid.Column="3" Grid.Row="0"/>
                </Grid>
            </DataTemplate>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Ressourcen/ResourceDictionary_Settings.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </ContentDialog.Resources>
    <Grid x:Name="MainGrid" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto" x:Name="ContentPresenter"/>
            <RowDefinition Height="Auto" x:Name="ÜberschriftNotizen"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Style="{StaticResource EditTextBlock}" x:Uid="Model_Thing_Bezeichner" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3"/>
        <TextBox Name="Bezeichner" Text="{x:Bind Data.Bezeichner, Mode=TwoWay}" Style="{StaticResource EditTextBox}" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3"/>
        <TextBlock Style="{StaticResource EditTextBlock}" x:Uid="Model_Thing_Typ" Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="3"/>
        <TextBox Name="Typ" Text="{x:Bind Data.Typ, Mode=TwoWay}" Style="{StaticResource EditTextBox}" Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="3"/>
        <TextBlock Style="{StaticResource EditTextBlock}" x:Uid="Model_Thing_Wert" Grid.Column="3" Grid.Row="0"/>
        <TextBox Name="Wert" Text="{x:Bind Data.Wert, Mode=TwoWay, Converter={StaticResource io_ZahlenDouble}}" Style="{StaticResource EditZahlen}" Grid.Column="3" Grid.Row="1"/>
        <TextBlock Style="{StaticResource EditTextBlock}" x:Uid="Model_Thing_Zusatz" Grid.Column="3" Grid.Row="2"/>
        <TextBox Name="Zusatz" Text="{x:Bind Data.Zusatz, Mode=TwoWay}" Style="{StaticResource EditTextBox}" Grid.Column="3" Grid.Row="3"/>
        <ContentPresenter 
        Grid.Row="4" Grid.ColumnSpan="4"
        x:Name="EditType" 
        Background="Transparent" 
        Loaded="EditType_Loaded">
        </ContentPresenter>
        <TextBlock Style="{StaticResource EditTextBlock}" x:Uid="Model_Thing_Notiz" Grid.Column="0" Grid.Row="5" Grid.ColumnSpan="4"/>
        <TextBox Name="Notiz" Text="{x:Bind Data.Notiz, Mode=TwoWay}" Style="{StaticResource NotesBox}" Grid.Column="0" Grid.Row="6" Grid.ColumnSpan="4"/>
    </Grid>
</ContentDialog>