<ContentDialog
    x:Class="ShadowRunHelper.HD_Wahl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ShadowRunHelper"
    xmlns:model="using:ShadowRunHelper.CharModel"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:t="using:ShadowRunHelper.Controller"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Auswahl"
    PrimaryButtonText="Fertig"  
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    >
    <ScrollViewer Height="500" Width="500">
        <GridView Name="Zus_ListVIew" ItemsSource="{x:Bind lstAll}" Grid.Column="1" Grid.Row="5" SelectionMode="Multiple" Loaded="Zus_ListVIew_Loaded" Tapped="Zus_ListVIew_Tapped">
            <GridView.ItemTemplate>
                <DataTemplate x:DataType="model:Thing">
                    <StackPanel Name="Zus_ListVIew_Stack">
                        <TextBlock Text="{x:Bind Bezeichner, Mode=OneWay}"  Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0"/>
                        <TextBlock Text="{x:Bind Wert, Mode=OneWay}"  Grid.Column="1" Grid.Row="1"/>
                        <TextBlock Text="{x:Bind Typ, Mode=OneWay}"  Grid.Column="0" Grid.Row="1"/>
                    </StackPanel>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
    </ScrollViewer>
</ContentDialog>
