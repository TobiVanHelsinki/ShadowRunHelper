<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ShadowRunHelper"
    xmlns:conv="using:ShadowRunHelper.UI.Converter">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="ResourceDictionary_App.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="Button" x:Key="Char_Control_Btn">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Margin" Value="4,5,4,5"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="U">
        <Setter Property="FontSize" Value="30"/>
        <Setter Property="Margin" Value="4,2,4,4"/>
    </Style>
    <Style TargetType="TextBlock" x:Key="Chars">
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="Margin" Value="4,2,4,4"/>
    </Style>

</ResourceDictionary>
