<Page
    x:Class="ShadowRunHelper.Char"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:ShadowRunHelper"
    xmlns:CharModel="using:ShadowRunHelper.CharModel"
    xmlns:model="using:ShadowRunHelper.Model"
    mc:Ignorable="d">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Ressourcen/ResourceDictionary_Char.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <DataTemplate x:Key="ThingListEntry" x:DataType="model:ThingListEntry">
                <Grid Name="Zus_ListVIew_Stack" Style="{StaticResource ListView_ThingList}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="{x:Bind This, Converter={StaticResource o_ThingList}, ConverterParameter=Bezeichner}" Grid.Column="0"/>
                    <TextBlock x:Uid="Doppelpunkt" Grid.Column="1"/>
                    <TextBlock Text="{x:Bind This, Converter={StaticResource o_ThingList}, ConverterParameter=Wert}" Grid.Column="2"/>
                    <TextBlock Text="{x:Bind This, Converter={StaticResource o_ThingList}, ConverterParameter=Zusatz}" Grid.Row="1" Grid.ColumnSpan="3"/>
                </Grid>
            </DataTemplate>
            <DataTemplate x:Name="HandlungItem" x:DataType="CharModel:Handlung">
                <Grid Style="{StaticResource ListView_Item_Grid}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"  Style="{StaticResource ListView_Item_Text}">
                                                <Run Text="{x:Bind Typ, Converter={StaticResource o_ModelTyp}, Mode=OneWay}" />
                                                <Run Text="{x:Bind Bezeichner, Mode=OneWay}" />
                    </TextBlock>
                    <TextBlock  Grid.Column="1">
                        <Run Text="{x:Bind Wert, Mode=OneWay}"/>
                        <Run x:Uid="Space"/>
                        <Run Text="{x:Bind Zusatz, Mode=OneWay}"/>
                        <Run x:Uid="KlammerAufEck"/>
                        <Run Text="{x:Bind Grenze, Mode=OneWay}"/>
                        <Run x:Uid="KlammerZuEck"/>
                        <Run x:Uid="Bindestrich"/>
                        <Run Text="{x:Bind Gegen, Mode=OneWay}"/>
                    </TextBlock>
                </Grid>
            </DataTemplate>
            <DataTemplate x:Name="HandlungItemX" x:DataType="CharModel:Handlung">
                <Grid Style="{StaticResource ListView_Item_Grid}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Column="0"  Style="{StaticResource ListView_Item_Text}">
                                                <Run Text="{x:Bind Typ, Converter={StaticResource o_ModelTyp}, Mode=OneWay}" />
                                                <Run Text="{x:Bind Bezeichner, Mode=OneWay}" />
                    </TextBlock>
                    <Button Grid.Column="1" x:Uid="UI_Btn_Bearbeiten" Name="Handlung_Edit" Click="Edit_Click" Style="{StaticResource ListView_Item_Buttons}"/>
                    <Button Grid.Column="2" x:Uid="UI_Btn_Loeschen" Name="Handlung_Del" Click="Del_Click" Style="{StaticResource ListView_Item_Buttons}"/>
                    <Grid Grid.Row="1" Grid.ColumnSpan="3">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Grid.Row="0" Style="{StaticResource ListView_Item_Text}" x:Uid="Model_Thing_Wert_W"/>
                        <TextBlock Grid.Column="1" Grid.Row="0" Style="{StaticResource ListView_Item_Text}" Text="{x:Bind Wert, Mode=OneWay}"/>
                        <Button Grid.Column="2" Grid.Row="0" x:Uid="UI_Btn_Bearbeiten" Style="{StaticResource ListView_Item_Buttons}" Click="HandlungEditZusDialog_Click"/>
                        <GridView Grid.Column="3" Grid.Row="0" Name="Zus_ListVIew" ItemsSource="{x:Bind WertZusammensetzung, Mode=OneWay}" ItemTemplate="{StaticResource ThingListEntry}" ItemContainerStyle="{StaticResource ListView_ThingListContainerTemplate}"/>
                        <TextBlock Grid.Column="0" Grid.Row="1" Style="{StaticResource ListView_Item_Text}" x:Uid="Model_Handlung_Grenze"/>
                        <TextBlock Grid.Column="1" Grid.Row="1" Style="{StaticResource ListView_Item_Text}" Text="{x:Bind Grenze, Mode=OneWay}"/>
                        <Button Grid.Column="2" Grid.Row="1" x:Uid="UI_Btn_Bearbeiten" Style="{StaticResource ListView_Item_Buttons}" Click="HandlungEditGrenzeZusDialog_Click"/>
                        <GridView Grid.Column="3" Grid.Row="1" Name="GZus_ListVIew" ItemsSource="{x:Bind GrenzeZusammensetzung, Mode=OneWay}"  ItemTemplate="{StaticResource ThingListEntry}"/>
                        <TextBlock Grid.Column="0" Grid.Row="2" Style="{StaticResource ListView_Item_Text}" x:Uid="Model_Handlung_Gegen"/>
                        <TextBlock Grid.Column="1" Grid.Row="2" Style="{StaticResource ListView_Item_Text}" Text="{x:Bind Gegen, Mode=OneWay}"/>
                        <Button Grid.Column="2" Grid.Row="2" x:Uid="UI_Btn_Bearbeiten" Style="{StaticResource ListView_Item_Buttons}" Click="HandlungEditGegenZusDialog_Click"/>
                        <GridView Grid.Column="3" Grid.Row="2" Name="GegZus_ListVIew" ItemsSource="{x:Bind GegenZusammensetzung, Mode=OneWay}"  ItemTemplate="{StaticResource ThingListEntry}"/>
                        <TextBlock Grid.Column="0" Grid.Row="3" Style="{StaticResource ListView_Item_Text}" x:Uid="Model_Thing_Zusatz"/>
                        <TextBlock Grid.Column="1" Grid.Row="3" Style="{StaticResource ListView_Item_Text}" Text="{x:Bind Zusatz, Mode=OneWay}"/>
                    </Grid>
                    <TextBlock Grid.Row="2"  Grid.ColumnSpan="3" Style="{StaticResource ListView_Item_Text_Note}">
                            <Run x:Uid="Model_Thing_Notiz" FontWeight="SemiBold"/>
                            <Run x:Uid="Doppelpunkt" FontWeight="Bold"/>
                            <Run x:Uid="Space" FontWeight="Bold"/>
                            <Run Text="{x:Bind Notiz, Mode=OneWay}"/>
                    </TextBlock>
                </Grid>
            </DataTemplate>
            <DataTemplate x:Name="VehikelItem" x:DataType="CharModel:Vehikel">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="58"/>
                        <ColumnDefinition Width="58"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <CheckBox Grid.Column="0" IsChecked="{x:Bind Aktiv, Mode=TwoWay}" Style="{StaticResource ListView_Item_CheckBox}"/>
                    <CheckBox Grid.Column="1" IsChecked="{x:Bind Besitz, Mode=TwoWay}" Style="{StaticResource ListView_Item_CheckBox}"/>
                    <Grid Grid.Column="2" Style="{StaticResource ListView_Item_Grid}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"  Style="{StaticResource ListView_Item_Text}">
                                                <Run Text="{x:Bind Typ, Converter={StaticResource o_ModelTyp}, Mode=OneWay}" />
                                                <Run Text="{x:Bind Bezeichner, Mode=OneWay}" />
                        </TextBlock>
                        <TextBlock Grid.Column="1" Style="{StaticResource ListView_Item_Text}">
                                            <Run Text="{x:Bind Wert, Mode=OneWay}"/><Run x:Uid="Space"/><Run Text="{x:Bind Zusatz, Mode=OneWay}"/>
                        </TextBlock>
                        <TextBlock Grid.Column="2" Text="{x:Bind Panzerung, Mode=OneWay}" Style="{StaticResource ListView_Item_Text}"/>
                    </Grid>
                </Grid>
            </DataTemplate>
            <DataTemplate x:Name="VehikelItemX" x:DataType="CharModel:Vehikel">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <ContentPresenter ContentTemplate="{StaticResource VehikelItem}"/>
                    <VariableSizedWrapGrid Grid.Row="1" Orientation="Horizontal">
                        <StackPanel Orientation="Vertical">
                            <Button x:Uid="UI_Btn_Bearbeiten" Name="Vehikel_Edit" Click="Edit_Click" Style="{StaticResource ListView_Item_Buttons}"/>
                            <Button x:Uid="UI_Btn_Loeschen" Name="Vehikel_Del" Click="Del_Click" Style="{StaticResource ListView_Item_Buttons}"/>
                        </StackPanel>
                        <StackPanel Style="{StaticResource ListView_Item_X_Wrap_StackPanels}">
                            <TextBlock Style="{StaticResource ListView_Item_Text}" x:Uid="Model_Thing_Zusatz"/>
                            <TextBlock Style="{StaticResource ListView_Item_Text}" x:Uid="Space"/>
                            <TextBlock Style="{StaticResource ListView_Item_Text}" Text="{x:Bind Zusatz, Mode=OneWay}"/>
                        </StackPanel>
                        <StackPanel Style="{StaticResource ListView_Item_X_Wrap_StackPanels}">
                            <TextBlock Style="{StaticResource ListView_Item_Text}" x:Uid="Model_Item_Anzahl"/>
                            <TextBlock Style="{StaticResource ListView_Item_Text}" Text="{x:Bind Anzahl, Mode=OneWay}"/>
                        </StackPanel>
                        <StackPanel Style="{StaticResource ListView_Item_X_Wrap_StackPanels}">
                            <TextBlock Style="{StaticResource ListView_Item_Text}" x:Uid="Model_Vehikel_Handling"/>
                            <TextBlock Style="{StaticResource ListView_Item_Text}" Text="{x:Bind Handling, Mode=OneWay}"/>
                        </StackPanel>
                        <StackPanel Style="{StaticResource ListView_Item_X_Wrap_StackPanels}">
                            <TextBlock Style="{StaticResource ListView_Item_Text}" x:Uid="Model_Vehikel_Geschwindigkeit"/>
                            <TextBlock Style="{StaticResource ListView_Item_Text}" Text="{x:Bind Geschwindigkeit, Mode=OneWay}"/>
                        </StackPanel>
                        <StackPanel Style="{StaticResource ListView_Item_X_Wrap_StackPanels}">
                            <TextBlock Style="{StaticResource ListView_Item_Text}" x:Uid="Model_Vehikel_Beschleunigung"/>
                            <TextBlock Style="{StaticResource ListView_Item_Text}" Text="{x:Bind Beschleunigung, Mode=OneWay}"/>
                        </StackPanel>
                        <StackPanel Style="{StaticResource ListView_Item_X_Wrap_StackPanels}">
                            <TextBlock Style="{StaticResource ListView_Item_Text}" x:Uid="Model_Vehikel_Rumpf"/>
                            <TextBlock Style="{StaticResource ListView_Item_Text}" Text="{x:Bind Rumpf, Mode=OneWay}"/>
                        </StackPanel>
                        <StackPanel Style="{StaticResource ListView_Item_X_Wrap_StackPanels}">
                            <TextBlock Style="{StaticResource ListView_Item_Text}" x:Uid="Model_Vehikel_Pilot"/>
                            <TextBlock Style="{StaticResource ListView_Item_Text}" Text="{x:Bind Pilot, Mode=OneWay}"/>
                        </StackPanel>
                        <StackPanel Style="{StaticResource ListView_Item_X_Wrap_StackPanels}">
                            <TextBlock Style="{StaticResource ListView_Item_Text}" x:Uid="Model_Vehikel_Sensor"/>
                            <TextBlock Style="{StaticResource ListView_Item_Text}" Text="{x:Bind Sensor, Mode=OneWay}"/>
                        </StackPanel>
                        <StackPanel Style="{StaticResource ListView_Item_X_Wrap_StackPanels}">
                            <TextBlock Style="{StaticResource ListView_Item_Text}" x:Uid="Model_Vehikel_Sitze"/>
                            <TextBlock Style="{StaticResource ListView_Item_Text}" Text="{x:Bind Sitze, Mode=OneWay}"/>
                        </StackPanel>
                        <StackPanel Style="{StaticResource ListView_Item_X_Wrap_StackPanels}">
                            <TextBlock Style="{StaticResource ListView_Item_Text}" x:Uid="Model_Vehikel_Gewicht"/>
                            <TextBlock Style="{StaticResource ListView_Item_Text}" Text="{x:Bind Gewicht, Mode=OneWay}"/>
                        </StackPanel>
                    </VariableSizedWrapGrid>
                    <TextBlock Grid.Row="2" Style="{StaticResource ListView_Item_Text_Note}">
                            <Run x:Uid="Model_Thing_Notiz" FontWeight="SemiBold"/>
                            <Run x:Uid="Doppelpunkt" FontWeight="Bold"/>
                            <Run x:Uid="Space" FontWeight="Bold"/>
                            <Run Text="{x:Bind Notiz, Mode=OneWay}"/>
                    </TextBlock>
                </Grid>
            </DataTemplate>
            <DataTemplate x:Name="FertigkeitItem" x:DataType="CharModel:Fertigkeit">
                <Grid Grid.Column="2" Style="{StaticResource ListView_Item_Grid}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"  Style="{StaticResource ListView_Item_Text}">
                                                <Run Text="{x:Bind Typ, Converter={StaticResource o_ModelTyp}, Mode=OneWay}" />
                                                <Run Text="{x:Bind Bezeichner, Mode=OneWay}" />
                    </TextBlock>
                    <TextBlock  Grid.Column="1">
                         <Run Text="{x:Bind Wert, Mode=OneWay}"/><Run x:Uid="Space"/><Run Text="{x:Bind Zusatz, Mode=OneWay}"/>
                    </TextBlock>
                    <TextBlock  Grid.Column="2">
                         <Run x:Uid="Bindestrich"/><Run Text="{x:Bind Pool, Mode=OneWay}"/>
                    </TextBlock>
                </Grid>
            </DataTemplate>
            <DataTemplate x:Name="FertigkeitItemX" x:DataType="CharModel:Fertigkeit">
                <Grid Style="{StaticResource ListView_Item_Grid}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <ContentPresenter Grid.ColumnSpan="2" Grid.Row="0" ContentTemplate="{StaticResource FertigkeitItem}"/>
                    <Button x:Uid="UI_Btn_Bearbeiten_Pool" Click="FertigkeitenZusammensetzungBearbeiten" Grid.Row="1" Style="{StaticResource ListView_Item_Buttons}"/>
                    <Button x:Uid="UI_Btn_Bearbeiten" Click="Edit_Click" Grid.Row="2" Style="{StaticResource ListView_Item_Buttons}"/>
                    <Button x:Uid="UI_Btn_Loeschen" Click="Del_Click" Grid.Row="3" Style="{StaticResource ListView_Item_Buttons}"/>
                    <GridView Grid.Column="1" Grid.Row="1" ItemsSource="{x:Bind PoolZusammensetzung, Mode=OneWay}" ItemTemplate="{StaticResource ThingListEntry}"/>
                    <TextBlock Grid.Row="2" Grid.RowSpan="2" Grid.Column="1" Style="{StaticResource ListView_Item_Text_Note}">
                            <Run x:Uid="Model_Thing_Notiz" FontWeight="SemiBold"/>
                            <Run x:Uid="Doppelpunkt" FontWeight="Bold"/>
                            <Run x:Uid="Space" FontWeight="Bold"/>
                            <Run Text="{x:Bind Notiz, Mode=OneWay}"/>
                    </TextBlock>

                </Grid>
            </DataTemplate>
            <DataTemplate x:Name="ItemItem" x:DataType="CharModel:Item">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="58"/>
                        <ColumnDefinition Width="58"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <CheckBox Grid.Column="0" IsChecked="{x:Bind Aktiv, Mode=TwoWay}" Style="{StaticResource ListView_Item_CheckBox}"/>
                    <CheckBox Grid.Column="1" IsChecked="{x:Bind Besitz, Mode=TwoWay}" Style="{StaticResource ListView_Item_CheckBox}"/>
                    <Grid Grid.Column="2" Style="{StaticResource ListView_Item_Grid}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"  Style="{StaticResource ListView_Item_Text}">
                                                <Run Text="{x:Bind Typ, Converter={StaticResource o_ModelTyp}, Mode=OneWay}" /><Run Text="{x:Bind Bezeichner, Mode=OneWay}" />
                        </TextBlock>
                        <TextBlock Grid.Column="1">
                                            <Run Text="{x:Bind Wert, Mode=OneWay}"/><Run x:Uid="Space"/><Run Text="{x:Bind Zusatz, Mode=OneWay}"/>
                        </TextBlock>
                        <TextBlock Grid.Column="2" Text="{x:Bind Anzahl, Mode=OneWay}" Style="{StaticResource ListView_Item_Text}"/>
                    </Grid>
                </Grid>
            </DataTemplate>
            <DataTemplate x:Name="ItemItemX" x:DataType="CharModel:Item">
                <Grid Style="{StaticResource ListView_Item_Grid}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <ContentPresenter Grid.ColumnSpan="2" Grid.Row="0" ContentTemplate="{StaticResource ItemItem}"/>
                    <Button x:Uid="UI_Btn_Bearbeiten" Click="Edit_Click" Grid.Row="1" Style="{StaticResource ListView_Item_Buttons}"/>
                    <Button x:Uid="UI_Btn_Loeschen" Click="Del_Click" Grid.Row="2" Style="{StaticResource ListView_Item_Buttons}"/>
                    <TextBlock Grid.Row="1" Grid.RowSpan="2" Grid.Column="1" Style="{StaticResource ListView_Item_Text_Note}">
                            <Run x:Uid="Model_Thing_Notiz" FontWeight="SemiBold"/>
                            <Run x:Uid="Doppelpunkt" FontWeight="Bold"/>
                            <Run x:Uid="Space" FontWeight="Bold"/>
                            <Run Text="{x:Bind Notiz, Mode=OneWay}"/>
                    </TextBlock>
                </Grid>
            </DataTemplate>
            <DataTemplate x:Name="KommlinkItem" x:DataType="CharModel:Kommlink">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="58"/>
                        <ColumnDefinition Width="58"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <CheckBox Grid.Column="0" IsChecked="{x:Bind Aktiv, Mode=TwoWay}" Style="{StaticResource ListView_Item_CheckBox}"/>
                    <CheckBox Grid.Column="1" IsChecked="{x:Bind Besitz, Mode=TwoWay}" Style="{StaticResource ListView_Item_CheckBox}"/>

                    <Grid Grid.Column="2" Style="{StaticResource ListView_Item_Grid}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"  Style="{StaticResource ListView_Item_Text}">
                                                <Run Text="{x:Bind Typ, Converter={StaticResource o_ModelTyp}, Mode=OneWay}" />
                                                <Run Text="{x:Bind Bezeichner, Mode=OneWay}" />
                        </TextBlock>
                        <TextBlock  Grid.Column="1">
                                            <Run Text="{x:Bind Wert, Mode=OneWay}"/><Run x:Uid="Space"/><Run Text="{x:Bind Zusatz, Mode=OneWay}"/>
                        </TextBlock>
                        <TextBlock Style="{StaticResource ListView_Item_Text}" Grid.Column="2" Text="{x:Bind Programmanzahl, Mode=OneWay}"/>
                        <TextBlock Style="{StaticResource ListView_Item_Text}" Grid.Column="3">
                                            <Run Text="{x:Bind Firewall, Mode=OneWay}"/><Run x:Uid="Slash"/><Run Text="{x:Bind Datenverarbeitung, Mode=OneWay}"/>
                        </TextBlock>
                    </Grid>
                </Grid>
            </DataTemplate>
            <DataTemplate x:Name="KommlinkItemX" x:DataType="CharModel:Kommlink">
                <Grid Style="{StaticResource ListView_Item_Grid}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <ContentPresenter Grid.ColumnSpan="2" Grid.Row="0" ContentTemplate="{StaticResource KommlinkItem}"/>
                    <Button x:Uid="UI_Btn_Bearbeiten" Click="Edit_Click" Grid.Row="1" Style="{StaticResource ListView_Item_Buttons}"/>
                    <Button x:Uid="UI_Btn_Loeschen" Click="Del_Click" Grid.Row="2" Style="{StaticResource ListView_Item_Buttons}"/>
                    <TextBlock Grid.Row="1" Grid.RowSpan="2" Grid.Column="1" Style="{StaticResource ListView_Item_Text_Note}">
                            <Run x:Uid="Model_Thing_Notiz" FontWeight="SemiBold"/>
                            <Run x:Uid="Doppelpunkt" FontWeight="Bold"/>
                            <Run x:Uid="Space" FontWeight="Bold"/>
                            <Run Text="{x:Bind Notiz, Mode=OneWay}"/>
                    </TextBlock>
                </Grid>
            </DataTemplate>
            <DataTemplate x:Name="CyberDeckItem" x:DataType="CharModel:CyberDeck">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="58"/>
                        <ColumnDefinition Width="58"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <CheckBox Grid.Column="0" IsChecked="{x:Bind Aktiv, Mode=TwoWay}" Style="{StaticResource ListView_Item_CheckBox}"/>
                    <CheckBox Grid.Column="1" IsChecked="{x:Bind Besitz, Mode=TwoWay}" Style="{StaticResource ListView_Item_CheckBox}"/>

                    <Grid Grid.Column="2" Style="{StaticResource ListView_Item_Grid}">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"  Style="{StaticResource ListView_Item_Text}">
                                                <Run Text="{x:Bind Typ, Converter={StaticResource o_ModelTyp}, Mode=OneWay}" />
                                                <Run Text="{x:Bind Bezeichner, Mode=OneWay}" />
                        </TextBlock>
                        <TextBlock  Grid.Column="1">
                                            <Run Text="{x:Bind Wert, Mode=OneWay}"/><Run x:Uid="Space"/><Run Text="{x:Bind Zusatz, Mode=OneWay}"/>
                        </TextBlock>
                        <TextBlock Style="{StaticResource ListView_Item_Text}" Grid.Column="2" Text="{x:Bind Programmanzahl, Mode=OneWay}"/>
                        <TextBlock Style="{StaticResource ListView_Item_Text}" Grid.Column="3" Text="{x:Bind dSchaden, Mode=OneWay}"/>
                        <TextBlock Style="{StaticResource ListView_Item_Text}" Grid.Column="4">
                                              <Run Text="{x:Bind Angriff, Mode=OneWay}"/><Run x:Uid="Slash"/><Run Text="{x:Bind Schleicher, Mode=OneWay}"/><Run x:Uid="Slash"/><Run Text="{x:Bind Firewall, Mode=OneWay}"/><Run x:Uid="Slash"/><Run Text="{x:Bind Datenverarbeitung, Mode=OneWay}"/>
                        </TextBlock>
                    </Grid>
                </Grid>
            </DataTemplate>
            <DataTemplate x:Name="CyberDeckItemX" x:DataType="CharModel:CyberDeck">
                <Grid Style="{StaticResource ListView_Item_Grid}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <ContentPresenter ContentTemplate="{StaticResource CyberDeckItem}"/>
                    <VariableSizedWrapGrid Grid.Row="1" Orientation="Horizontal">
                        <StackPanel Orientation="Vertical">
                            <Button x:Uid="UI_Btn_Bearbeiten" Click="Edit_Click" Style="{StaticResource ListView_Item_Buttons}"/>
                            <Button x:Uid="UI_Btn_Loeschen" Click="Del_Click"  Style="{StaticResource ListView_Item_Buttons}"/>
                        </StackPanel>
                        <StackPanel Style="{StaticResource ListView_Item_X_Wrap_StackPanels}">
                            <TextBlock Style="{StaticResource ListView_Item_Text}" x:Uid="Model_Kommlink_Attribute_o" TextWrapping="Wrap"/>
                            <TextBlock Style="{StaticResource ListView_Item_Text}" >
                                <Run Text="{x:Bind Angriff_o, Mode=OneWay}"/>
                                <Run x:Uid="Slash"/>
                                <Run Text="{x:Bind Schleicher_o, Mode=OneWay}"/>
                                <Run x:Uid="Slash"/>
                                <Run Text="{x:Bind Firewall_o, Mode=OneWay}"/>
                                <Run x:Uid="Slash"/>
                                <Run Text="{x:Bind Datenverarbeitung_o, Mode=OneWay}"/>
                            </TextBlock>
                        </StackPanel>
                        <StackPanel Style="{StaticResource ListView_Item_X_Wrap_StackPanels}">
                            <TextBlock Style="{StaticResource ListView_Item_Text}" x:Uid="Model_Kommlink_Attribute"/>
                            <TextBlock Style="{StaticResource ListView_Item_Text}" >
                                <Run Text="{x:Bind Angriff, Mode=OneWay}"/>
                                <Run x:Uid="Slash"/>
                                <Run Text="{x:Bind Schleicher, Mode=OneWay}"/>
                                <Run x:Uid="Slash"/>
                                <Run Text="{x:Bind Firewall, Mode=OneWay}"/>
                                <Run x:Uid="Slash"/>
                                <Run Text="{x:Bind Datenverarbeitung, Mode=OneWay}"/>
                            </TextBlock>
                        </StackPanel>
                        <StackPanel Style="{StaticResource ListView_Item_X_Wrap_StackPanels}">
                            <TextBlock Style="{StaticResource ListView_Item_Text}" x:Uid="Model_Item_Anzahl"/>
                            <TextBlock Style="{StaticResource ListView_Item_Text}" Text="{x:Bind Anzahl, Mode=OneWay}"/>
                        </StackPanel>
                        <StackPanel Style="{StaticResource ListView_Item_X_Wrap_StackPanels}">
                            <TextBlock Style="{StaticResource ListView_Item_Text}" x:Uid="Model_Kommlink_Programmanzahl"/>
                            <TextBlock Style="{StaticResource ListView_Item_Text}" Text="{x:Bind Programmanzahl, Mode=OneWay}"/>
                        </StackPanel>
                        <StackPanel Style="{StaticResource ListView_Item_X_Wrap_StackPanels}">
                            <TextBlock Style="{StaticResource ListView_Item_Text}" x:Uid="Model_Kommlink_Schaden"/>
                            <TextBlock Style="{StaticResource ListView_Item_Text}" Text="{x:Bind dSchaden, Mode=OneWay}"/>
                        </StackPanel>
