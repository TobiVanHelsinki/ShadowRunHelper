            <DataTemplate x:Key="Wandlung" x:DataType="CharModel:Wandlung">
                <ViewCell>
                    <Grid Style="{StaticResource TemplateGrid}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <ContentView ControlTemplate="{StaticResource Thing_Name}" Grid.Column="0"/>
                        <ContentView ControlTemplate="{StaticResource Thing_Value}" Grid.Column="1"/>
                        <Label Text="{x:Binding Echos}" Grid.Column="2" Style="{StaticResource STDText}"/>
                        <Label Text="{x:Binding Paragon}" Grid.Column="3" Style="{StaticResource STDText}"/>
                        <ContentView x:Name="Extended" Grid.ColumnSpan="4" Grid.Row="1"/>
                        <ContentView ControlTemplate="{StaticResource SeparatorLine}" Grid.ColumnSpan="4" Grid.Row="2"/>
                    </Grid>
                </ViewCell>
            </DataTemplate>
        </ResourceDictionary>
    </ContentView.Resources>
    <ContentView.Content>
        <Grid>
            <Grid.Resources>
                <OnPlatform x:Key="ButtonSize" x:TypeArguments="GridLength">
                    <On Platform="Android" Value="45"/>
                    <On Platform="UWP, WinRT, WinPhone" Value="Auto"/>
                </OnPlatform>
                <OnPlatform x:Key="Offset" x:TypeArguments="Thickness">
                    <On Platform="Android" Value="0,0,0,0"/>
                    <On Platform="UWP, WinRT, WinPhone" Value="0,-45,0,0"/>
                </OnPlatform>
            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TableView x:Name="Items" HasUnevenRows="True" Intent="Data" Grid.Row="1"
                       Margin="{StaticResource Offset}">
                <TableView.GestureRecognizers>
                    <SwipeGestureRecognizer Direction="Up" Swiped="HeaderHide"/>
                    <SwipeGestureRecognizer Direction="Down" Swiped="HeaderShow"/>
                </TableView.GestureRecognizers>
            </TableView>
            <Grid BackgroundColor="White" x:Name="Header">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Tapped="HeaderSwitch"/>
                    <ClickGestureRecognizer Clicked="HeaderSwitch"/>
                    <SwipeGestureRecognizer Direction="Down" Swiped="HeaderHide"/>
                    <SwipeGestureRecognizer Direction="Up" Swiped="HeaderShow"/>
                </Grid.GestureRecognizers>
                <Grid Padding="0,0,0,0" ColumnSpacing="0" RowSpacing="0" Margin="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="{StaticResource ButtonSize}"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="{StaticResource ButtonSize}"/>
                    </Grid.ColumnDefinitions>
                    <Button Text="&#xf067;" x:Name="CatAddButton" Style="{StaticResource ControllerIconButton}" Clicked="Add" TextColor="Default" Margin="2"/>
                    <Label x:Name="Headline" HorizontalOptions="Center" Grid.Column="1" VerticalOptions="Center" FontSize="Medium" Padding="0" Margin="0"/>
                    <Button Text="&#xf141;" x:Name="CatMoreButton" Style="{StaticResource ControllerIconButton}" Clicked="Options" Grid.Column="2" TextColor="Default" Margin="2"/>
                </Grid>
                <ContentView Grid.Row="1" x:Name="Items_H"/>
                <BoxView Grid.Row="2" HeightRequest="2" Color="LightGray" Margin="0"/>
            </Grid>
        </Grid>
    </ContentView.Content>
</ContentView>