                                    <StackLayout Orientation="Horizontal" Grid.Column="4" HorizontalOptions="Center">
                                        <Label Text="{x:Binding Angriff.TrueValue}" Grid.Column="4" Style="{StaticResource STDText}"/>
                                        <Label Text="/" Style="{StaticResource STDText}"/>
                                        <Label Text="{x:Binding Schleicher.TrueValue}" Grid.Column="4" Style="{StaticResource STDText}"/>
