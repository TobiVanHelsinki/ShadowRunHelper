<Page
    x:Class="ShadowRun_Charakter_Helper.Char"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ShadowRun_Charakter_Helper"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:ShadowRun_Charakter_Helper.CharController"
    xmlns:model="using:ShadowRun_Charakter_Helper.Model"
    mc:Ignorable="d">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Ressourcen/Dictionary_XAML_Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </Page.Resources>

    <Pivot x:Name="pivot" Style="{StaticResource TabsStylePivotStyle}" >
        <PivotItem >
            <PivotItem.Header>
                <local:TabHeader x:Uid="Char_View_Pivot_Aktion" Glyph="&#xE945;" />
            </PivotItem.Header>

            <ScrollViewer Style="{StaticResource Pivot_Item_ScrollViewer}">
                <VariableSizedWrapGrid Width="Auto" Orientation="Vertical" MaximumRowsOrColumns="2">
                    <StackPanel Name="Hanlung_Block">
                        <StackPanel Name="Handlung_U" Style="{StaticResource ListView_U}">
                            <TextBlock x:Uid="Model_Handlung_" Style="{StaticResource ListView_U_Text}"/>
                            <Button Name="Handlung_Add" Click="Add" Style="{StaticResource ListView_U_BtnAdd}"/>
                        </StackPanel>
                        <Grid Width="Auto" Name="Handlung_E" Style="{StaticResource ListView_E}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Name="Bezeichnung_U" x:Uid="Model_Bezeichner"  Style="{StaticResource ListView_Item_Text}"/>
                            <TextBlock Name="Pool" Grid.Column="1">
                                <Run x:Uid="Model_Wert"/><Run x:Uid="Plus"/><Run x:Uid="Model_Handlung_Mod"/>
                            </TextBlock>
                        </Grid>
                        <ListView AllowDrop="True" Name="Handlung" ItemsSource="{x:Bind ViewModel.Current.HandlungController}" Style="{StaticResource ListView}">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="data:Handlung">
                                    <Grid Tapped="Item_Tapped" Style="{StaticResource ListView_Item_Grid}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <FlyoutBase.AttachedFlyout>
                                            <Flyout x:Name="FlyoutHandlung" Opened="FlyoutHandlung_Opened" Closed="FlyoutHandlung_Closed">
                                                <StackPanel Orientation="Vertical">

                                                    <TextBlock Style="{StaticResource ListView_Item_Text}" x:Uid="Model_Notiz"/>
                                                    <TextBlock Style="{StaticResource ListView_Item_Text}" Text="{x:Bind Data.Notiz, Mode=OneWay}"/>
                                                    <Button x:Uid="UI_Btn_Bearbeiten" Name="Handlung_Edit" Click="HandlungEditDialog_Click"/>
                                                    <!--Zusammensetzung -->
                                                    <TextBlock Style="{StaticResource ListView_Item_Text}" x:Uid="Model_Handlung_Zusammensetzung"/>
                        
                                                    <GridView Name="Zus_ListVIew" ItemsSource="{x:Bind Data.Zusammensetzung}" >
                                                        <GridView.ItemTemplate >
                                                            <DataTemplate >
                                                                <Grid Tapped="Zus_Tapped" Name="Zus_ListVIew_Stack">
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                    </Grid.ColumnDefinitions>
                                                                    <Grid.RowDefinitions>
                                                                        <RowDefinition/>
                                                                        <RowDefinition/>
                                                                    </Grid.RowDefinitions>
                                                                    <TextBlock Text="{Binding Value.Bezeichner, Mode=OneWay}"  Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0"/>
                                                                    <TextBlock Text="{Binding Value.Wert, Mode=OneWay}"  Grid.Column="1" Grid.Row="1"/>
                                                                    <TextBlock Text="{Binding Value.Typ, Mode=OneWay}"  Grid.Column="0" Grid.Row="1"/>
                                                                </Grid>
                                                            </DataTemplate>
                                                        </GridView.ItemTemplate>
                                                    </GridView>

                                                    <!--/Zusammensetzung -->
                                                   
                                                </StackPanel>
                                            </Flyout>
                                        </FlyoutBase.AttachedFlyout>
                                        <TextBlock Name="Bezeichner" Grid.Column="0" Text="{x:Bind Data.Bezeichner, Mode=OneWay}" Style="{StaticResource ListView_Item_Text}"/>
                                        <TextBlock Name="Wert+Zusatz" Grid.Column="1">
                                            <Run Text="{x:Bind Data.Wert, Mode=OneWay}"/><Run x:Uid="Space"/><Run Text="{x:Bind Data.Zusatz, Mode=OneWay}"/>
                                        </TextBlock>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>
                    </StackPanel>
                    <StackPanel Name="Fertigkeiten_Block">
                        <StackPanel Name="Fertigkeiten_U" RelativePanel.Below="Handlung" Style="{StaticResource ListView_U}">
                        <TextBlock x:Uid="Model_Fertigkeiten_"  Style="{StaticResource ListView_U_Text}"/>
                    </StackPanel>
                        <Grid Name="Fertigkeiten_E" RelativePanel.Below="Fertigkeiten_U"  MaxWidth="{Binding Path=ActualWidth, ElementName=Fertigkeiten_Grid, Mode=TwoWay}" Style="{StaticResource ListView_E}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" x:Uid="Model_Bezeichner"  Style="{StaticResource ListView_Item_Text}"/>
                            <TextBlock Grid.Column="1" x:Uid="Model_Wert" Style="{StaticResource ListView_Item_Text}"/>
                        </Grid>
                        <ListView Name="Fertigkeiten" RelativePanel.Below="Fertigkeiten_E" ItemsSource="{x:Bind ViewModel.Current.FertigkeitController}" Style="{StaticResource ListView}">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="data:Fertigkeit">
                                <Grid Tapped="Item_Tapped" Style="{StaticResource ListView_Item_Grid}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="100"/>
                                    </Grid.ColumnDefinitions>
                                    <FlyoutBase.AttachedFlyout>
                                        <Flyout>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                <TextBlock Grid.Column="0" Grid.Row="0" Style="{StaticResource ListView_Item_Text}" x:Uid="Model_Notiz"/>
                                                    <TextBlock Grid.Column="1" Grid.Row="0" Style="{StaticResource ListView_Item_Text}" Text="{x:Bind Data.Notiz}"/>
                                                <TextBlock Grid.Column="0" Grid.Row="1" Style="{StaticResource ListView_Item_Text}" x:Uid="Model_Typ"/>
                                                    <TextBlock Grid.Column="1" Grid.Row="1" Style="{StaticResource ListView_Item_Text}" Text="{x:Bind Data.Typ}"/>
                                            </Grid>
                                        </Flyout>
                                    </FlyoutBase.AttachedFlyout>
                                        <TextBlock Grid.Column="0" Text="{x:Bind Data.Bezeichner}" Style="{StaticResource ListView_Item_Text}"/>
                                        <TextBlock Grid.Column="1" Text="{x:Bind Data.Wert}" Style="{StaticResource ListView_Item_Text}"/>
                                </Grid>

                            </DataTemplate>
                        </ListView.ItemTemplate>
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            </Style>
                        </ListView.ItemContainerStyle>

                    </ListView>
                    </StackPanel>
                </VariableSizedWrapGrid>
            </ScrollViewer>

        </PivotItem>
        <PivotItem>
            <PivotItem.Header>
                <local:TabHeader x:Uid="Char_View_Pivot_Item" Glyph="&#xE960;" />
            </PivotItem.Header>
            <ScrollViewer Style="{StaticResource Pivot_Item_ScrollViewer}">
                <RelativePanel Style="{StaticResource Pivot_Item_RelativePanel}">
                    <StackPanel Name="Items_U" RelativePanel.AlignTopWithPanel="True" Style="{StaticResource ListView_U}">
                        <TextBlock x:Uid="Model_Items_" Style="{StaticResource ListView_U_Text}"/>
                    </StackPanel>
                    <Grid Name="Items_E" RelativePanel.Below="Items_U" MaxWidth="{Binding Path=ActualWidth, ElementName=Items_Grid, Mode=TwoWay}" Style="{StaticResource ListView_E}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition MinWidth="100" Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" x:Uid="Model_Bezeichner"  Style="{StaticResource ListView_Item_Text}"/>
                        <TextBlock Grid.Column="1" x:Uid="Model_Wert"  Style="{StaticResource ListView_Item_Text}"/>
                        <TextBlock Grid.Column="3" x:Uid="Model_Notiz"  Style="{StaticResource ListView_Item_Text}"/>
                    </Grid>
                    <ListView RelativePanel.Below="Items_E" Name="Items" ItemsSource="{x:Bind ViewModel.Current.ItemController}" Style="{StaticResource ListView}">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="data:Item">
                                <Grid Style="{StaticResource ListView_Item_Grid}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition MinWidth="100" Width="*"/>
